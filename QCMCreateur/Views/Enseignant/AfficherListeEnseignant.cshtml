@model IEnumerable<QCMCreateur.Models.Enseignant>

@{
    ViewBag.Title = "ListeEnseignant";
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Authorisation)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.UserName, "Details", new { id = item.UserName })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Authorisation)
        </td>
    
        @if (QCMCreateur.Models.Administrateur.AdminOk == true)
        {
    <td>
        @Html.ActionLink("Modifier Authorisation", "ModifierAuthorisation", new { id = item.UserName }) |
        @Html.ActionLink("Supprimer", "SupprimerEnseignant", new { id = item.UserName })
    </td>
        }
    
    </tr>
}

</table>
